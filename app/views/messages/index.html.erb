<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
          <span class="label label-info"><%= message.name %></span>
          <%= message.body %>
          <br>
         <% end %>
    </div>
</div>

 <%= form_for @message, :html => {:class => 'form-horizontal' 'form-group'} do |f| %>
  <% if @message.errors.present? %>
  <div class="alert alert-danger">
   <%=alert %>
   <ul>
    <% @message.errors.full_messages.each do |full_message| %>
     <li>
      <%= full_message %>
     </li>
     <% end %>
   </ul>
  </div>
  <% end %>
 
   名前:
   <%= f.text_field :name , :size => "4x1" ,:class => 'form-control' %>
   <br><br><br>
   内容:
   <%= f.text_area :body  ,:class => 'form-control' %>
   <br><br><br>
   <%= f.submit class: "btn btn-sm btn-primary form-group" %>
 <% end %>
 